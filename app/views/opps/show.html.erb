<div class="m-3 md:mx-auto w-full">
  <div class="mx-auto md:w-1/3 flex flex-col gap-5">
    <% if notice.present? %>
      <!-- <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p> -->
    <% end %>
    <h2 class="text-3xl font-bold"><%= @opp.name %>'s Profile</h2>

    <div>
    <h2 class="font-bold">Reason for Opping:</h2>
    <p>
        <%= @opp.opp_reason %>
    </p>
    </div>



    <div>
    <h2 class="font-bold">Progress Updates:</h2>

    <% if @opp.progress.present? %>
      <ul class="list-disc list-inside">
        <% @opp.progress.each do |update| %>
          <li><%= update %></li>
        <% end %>
      </ul>
      <p class="font-bold text-gray-400">
          Last updated @ <%= @opp.updated_at %>
      </p>

    <% else %>
      <p>No progress updates available.</p>
    <% end %>
    </div>

    <%= form_with(model: @opp, class:"flex flex-col gap-2") do |form| %>
        <%= form.label :new_progres, 'New Progress:', class:"font-bold" %>
      <%= form.text_field :new_progress %>

      <%= form.submit "Log Progress", class:"bg-black p-2 rounded-md text-white" %>
    <% end %>

    <div class="flex flex-row justify-evenly gap-2">
    <%= link_to "Edit", edit_opp_path(@opp), class: "rounded-lg py-3 w-full bg-gray-100 inline-block font-medium text-center" %>
    <div class="inline-block w-full">
      <%= button_to "Delete", opp_path(@opp), method: :delete, class: "rounded-lg py-3 w-full bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back", opps_path, class: "rounded-lg py-3 w-full bg-gray-100 inline-block font-medium text-center" %>
    </div>
  </div>
</div>
