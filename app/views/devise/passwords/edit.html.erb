<div class="flex flex-col gap-4 w-5/6 sm:w-[500px]">
<h2 class="text-[40px] font-black">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mb-3">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"w-full rounded-lg" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full rounded-lg" %>
  </div>

  <div class="actions bg-black p-2 rounded-lg text-white text-center">
    <%= f.submit "Change Password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
